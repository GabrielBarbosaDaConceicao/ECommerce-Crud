@model IEnumerable<ECommerce.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cidades</h2>

<p>
    @Html.ActionLink("Criar Nova Cidade", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departament.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departament.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CityId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CityId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CityId }, new {@class = "btn btn-danger"} )
        </td>
    </tr>
}

</table>
